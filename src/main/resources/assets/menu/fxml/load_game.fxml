<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uet.arkanoid.Menu.LoadGameController">

    <VBox alignment="CENTER" layoutX="82.0" layoutY="99.0" prefHeight="346.0" prefWidth="630.0" spacing="10">
        <Text style="-fx-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" text="LOAD GAME" />

        <!-- Danh sách người chơi -->
        <ListView fx:id="playerList" prefHeight="250" prefWidth="400" style="-fx-background-color: #2d2d2d;" />

        <!-- Nút điều khiển -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="loadButton" onAction="#handleLoad" onMouseClicked="#handleLoad" style="-fx-font-size: 16; -fx-background-color: #3a86ff; -fx-text-fill: white;" text="Load" />
            <Button fx:id="backButton" onAction="#handleBack" onMouseClicked="#handleBack" style="-fx-font-size: 16; -fx-background-color: #e63946; -fx-text-fill: white;" text="Back" />
        </HBox>
    </VBox>
</AnchorPane>
