    <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />

        <!-- NEW GAME -->
        <Pane fx:id="continueButton" layoutX="323.0" layoutY="369.0" onMouseClicked="#playagain" prefHeight="36.0" prefWidth="136.0" styleClass="menu_pane">
            <children>
                <Rectangle fx:id="continue_button" arcHeight="20.0" arcWidth="20.0" fill="#002557" height="36.0" layoutX="1.0" opacity="0.9" stroke="BLACK" strokeType="INSIDE" styleClass="menu_button" width="136.0" />
