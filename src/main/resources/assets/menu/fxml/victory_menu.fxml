            </children>
        </Pane>
      <Pane fx:id="high_score" layoutX="323.0" layoutY="429.0" onMouseClicked="#handleHighScore" prefHeight="36.0" prefWidth="136.0" styleClass="menu_pane">
         <children>
                <Rectangle fx:id="option_button" arcHeight="20.0" arcWidth="20.0" fill="#002557" height="36.0" layoutX="1.0" opacity="0.9" stroke="BLACK" strokeType="INSIDE" styleClass="menu_button" width="136.0" />
