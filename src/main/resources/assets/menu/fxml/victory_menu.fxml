         </children>
      </Pane>

              <!-- OPTIONS -->
        <Pane fx:id="optionsButton" layoutX="323.0" layoutY="485.0" onMouseClicked="#returnHome" prefHeight="36.0" prefWidth="136.0" styleClass="menu_pane">
         <children>
            <Rectangle fx:id="return_button" arcHeight="20.0" arcWidth="20.0" fill="#002557" height="36.0" layoutX="1.0" opacity="0.9" stroke="BLACK" strokeType="INSIDE" styleClass="menu_button" width="136.0" />
            <Text fill="WHITE" layoutX="14.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="menu_text" text="RETURN HOME" textAlignment="CENTER" wrappingWidth="109.6" />
         </children>
        </Pane>
      <Pane fx:id="input_pane" layoutX="246.0" layoutY="266.0" prefHeight="66.0" prefWidth="310.0">
         <children>
            <Text fx:id="player_score" fill="WHITE" layoutX="27.0" layoutY="-41.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="menu_text" text="YOUR SCORE: " wrappingWidth="254.6" x="20.0" y="60.0" />
